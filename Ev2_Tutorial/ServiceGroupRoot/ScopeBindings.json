{
  "$schema": "http://schema.express.azure.com/schemas/2015-01-01-alpha/ScopeBindings.json",
  "contentVersion": "0.0.0.1",

  "scopeBindings": [
    {
      "scopeTagName": "MyAppCompute",
      "bindings": [
        {
          "find": "__SAMPLE_SKU__",
          "replaceWith": "Standard"
        }
      ]
    },
	{
      "scopeTagName": "WestUSRegion",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "wus"
        },
		    {
          "find": "__LOCATION__",
          "replaceWith": "West US"
        },
		    {
          "find": "__WESTUS_WAIT_TIME__",
          "replaceWith": "PT3M"
        }
      ]
    },
	{
      "scopeTagName": "EastUSRegion",
      "bindings": [
        {
          "find": "__LOCATION_ABBR__",
          "replaceWith": "eus"
        },
		    {
          "find": "__LOCATION__",
          "replaceWith": "East US"
        }
      ]
    }
  ]
}